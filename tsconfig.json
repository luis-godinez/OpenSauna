{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "module": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "homebridge-ui",
    "**/*.ts",
    "*.ts",
    "src",
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/**",
    "**/__mocks__/**",
    "dist"
  ]
}